<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <system.web>
    <identity impersonate="false" />
    <machineKey validation="HMACSHA512" />
  </system.web>

  <system.webServer>

    <!-- URL Rewrite cho SPA -->
    <rewrite>
      <rules>
        <!-- Rewrite tất cả request đến index.html nếu không phải file hoặc folder thực -->
        <rule name="SPA Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Nếu request không phải file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Nếu request không phải folder -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- MIME types bổ sung -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <mimeMap fileExtension=".ttf" mimeType="application/font-sfnt" />
      <mimeMap fileExtension=".eot" mimeType="application/vnd.ms-fontobject" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <!-- Optional: cache static files (CSS, JS, JSON) -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>

    <!-- Default document -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

  </system.webServer>
</configuration>
